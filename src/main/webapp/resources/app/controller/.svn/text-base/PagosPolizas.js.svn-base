Ext.define('app.controller.PagosPolizas', {
    extend: 'Ext.app.Controller',
    views: ['pagospolizas.List'],
	stores:  ['PagosPolizas'],
	refs: [{
	    ref: 'pagospolizasList',
	    selector: 'pagospolizasList'
	}],
	init: function() {
		this.control({
			'pagospolizasList':{
					itemdblclick: function(thisO, record, item, index, e, eOpts){
						if(this.getPagosPolizasList().editionMode!=app.utils.EditionMode.ROW){
	
							var xtype = 'pagospolizasEdit';
							var idTab = 'pagospolizas-'+record.data.id;
							var title = record.data.serverName;
							var form;
							if(this.getPagosPolizasList().editionMode==app.utils.EditionMode.WINDOW){
								var win=app.utils.openWindow(xtype,title);
								form = win.query('pagospolizasEdit')[0].getForm();
							}else if(this.getPagosPolizasList().editionMode==app.utils.EditionMode.TAB){							
								var win=app.utils.openTab(xtype,title,idTab);
								form = win.getForm();
							}
							
							
							form.loadRecord(record)
							//fill combos							
							form.findField('polizas.id').setValue(record.data.polizas.id)
							form.findField('companias.id').setValue(record.data.companias.id)
						}	
	
		        	}
					,edit: function(editor, e) {
				        // commit the changes right after editing finished
				        Ext.Ajax.request({
						    url: CONTEXT_ROOT+'/pagospolizas/',
						    method: 'POST',
						    params: e.record.data,
						    success: function(response){
								e.grid.store.reload();
								
						    }
						});
					}
					,beforeedit: function(editor, e) {
				    	var record=e.record;
				    	//fill combos
						Ext.getCmp('polizas.id').getEditor().setValue(record.data.polizas.id);
						Ext.getCmp('companias.id').getEditor().setValue(record.data.companias.id);

				    }	
					,render:function(grid){
						grid.store.load();
					}	
				}
				,'pagospolizasList > toolbar > button#add':{
		    		click:function(button){
						//Uncomment if you want edit on a window instead on the grid
						if(this.getPagosPolizasList().editionMode!=app.utils.EditionMode.ROW){
							var xtype = 'pagospolizasEdit';
							var idTab = 'pagospolizas-new';
							var title = 'New';							  
							app.utils.openTab(xtype,title,idTab);
							if(this.getPagosPolizasList().editionMode==app.utils.EditionMode.WINDOW){
								app.utils.openWindow(xtype,title);							
							}else if(this.getPagosPolizasList().editionMode==app.utils.EditionMode.TAB){							
								app.utils.openTab(xtype,title,idTab);
							}   			
						}else{
			    			this.getPagosPolizasList().store.insert(0, new app.model.PagosPolizas());
			    			this.getPagosPolizasList().plugins[0].startEdit(0, 0);                
			    		}
		    		}
		    	},'pagospolizasList > toolbar > button#delete':{
		    		click:function(button){
			    		var grid=button.up('pagospolizasList');
			    		var selection =	 grid.getSelectionModel().getSelection()[0];
	                    if (selection) {
							Ext.Ajax.request({
							    url: CONTEXT_ROOT+'/pagospolizas/delete',
							    method: 'POST',
							    params: {id:selection.data.id},
							    success: function(response){
									grid.store.reload();
							    	app.utils.requestMessageProcessor(grid.store.proxy,response);
									
							    },
							    error: function(response){
							    	app.utils.requestMessageProcessor(grid.store.proxy,response);
									
							    }
							});
	                    }
		    		}
		    	}
				,'pagospolizasEdit > button#save':{
		    		click:function(button){
		    			var grid=button.up('pagospolizasList');
		    			var store = grid.store;
		    			button.up('form').getForm().submit({
		               	 success: function(form, action) {
	//	                        Ext.Msg.alert('Success', action.result.message);
		                        grid.getStore().reload();
		                     },
		                     failure: function(form, action) {
		                         //Ext.Msg.alert('Failed', action.result ? action.result.message : 'No response');
		                     }
		               	});
		    			
		    		}
		    	}
		
			});
	}
	
});
